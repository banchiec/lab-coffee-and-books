<div class="container">
    <h1>Editar lugar</h1>
    <hr>

    <div class="row justify-content-center">

        <div class="col-md-6">

            <form action="/lugares/editar/{{id}}" method="POST">
                <div class="form-group">
                    <label for="title">Nombre del lugar</label>
                    <input type="text" class="form-control" id="title" name="name" value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="author">Tipo</label>
                    <input type="text" class="form-control" id="author" name="type" value="{{type}}">
                </div>
                <label for="author">Localizaci√≥n</label>
                {{#each location.coordinates}}
                <div class="form-group">
                    <input type="text" class="form-control" id="author" name="coordinates" value="{{this}}">
                </div>
                {{/each}}
                <button type="submit" class="btn btn-dark btn-block">Editar lugar</button>
            </form>

        </div>
    </div>

    <hr>
    <a href="/" class="btn btn-dark">Volver</a>
</div>