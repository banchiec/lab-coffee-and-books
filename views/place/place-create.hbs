<div class="container">
    <h1>Crear Lugar</h1>
    <hr>

    <div class="row justify-content-center">

        <div class="col-md-6">

            <form action="/lugares/crea" method="POST">
                <div class="form-group">
                    <label for="title">Nombre del lugar</label>
                    <input type="text" class="form-control" id="title" name="name">
                </div>
                <div class="form-group">
                    <label for="author">Tipo</label>
                    <input type="text" class="form-control" id="author" name="type">
                </div>
                <div class="form-group">
                    <label for="author">Latitud</label>
                    <input type="text" class="form-control" id="author" name="latitud">
                </div>
                <div class="form-group">
                    <label for="author">Longitud</label>
                    <input type="text" class="form-control" id="author" name="longitud">
                </div>
                <button type="submit" class="btn btn-dark btn-block">Crear lugar</button>
            </form>

        </div>
    </div>


    <hr>
    <a href="/" class="btn btn-dark">Volver</a>
</div>